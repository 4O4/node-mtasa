{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./lib",
        "preserveConstEnums": true,
        "removeComments": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*-spec.ts"
    ]
}
